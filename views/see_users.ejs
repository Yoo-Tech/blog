<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <div class="table-responsive">
    
                        <table class="table table-striped text-center">
                            <thead>
                                <tr class="table-dark">
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((row, index) => { %>
                                    <tr>
                                        <td><%= index  %> </td>
                                        <td><img src="<%= row.image  %> " width="50" class="img-thumnail" alt=""></td>
                                        <td><%= row.name  %></td>
                                        <td><%= row.email  %></td>
                                        <td><%= row.phone  %></td>
                                        <td>
                                            <a href="/edit/<%= row._id  %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/delete/<%= row._id  %>" class="text-danger"><i class="fas fa-times fa-lg mx-1"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
    
                    
    
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>