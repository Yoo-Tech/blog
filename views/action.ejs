<%- include('layouts/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if(users != ""){ %>

                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Heading</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index +1  %> </td>
                                    <td><img src="<%= row.image  %> " width="50" class="img-thumnail" alt=""></td>
                                    <td><%= row.title  %></td>
                                    <td><%= row.heading  %></td>
                                    <td>
                                        <a href="/edit/<%= row._id  %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id  %>" class="text-danger delete"><i class="fas fa-times fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                <% } else { %>
                    <h1 class="text-center text-secondary mt-5"> No User found</h1>
                <% } %>

                
            </div>
        </div>
    </div>
</div>


<%- include('layouts/footer') %>