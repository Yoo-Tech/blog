<%- include('layouts/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit User</h1>
        </div>
    </div>

    <form action="/update/<%= users._id %> " method="post" id="edit-form" enctype="multipart/form-data">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="title" placeholder="Title" value="<%= users.title %> " required >
                <label for="floatingInput">Title</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="heading" placeholder="Heading" value="<%= users.heading %>" required >
                <label for="floatingInput">Heading</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="article" placeholder="Article" value="<%= users.article %>" required >
                <label for="floatingInput">Article</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="file" class="form-control" id="floatingInput" name="image" placeholder="" value="" >
                <label for="floatingInput"></label>
                <img src="/<%= users.image %>" alt="" width="100" class="img-thumbnail mt-1">
            </div>
        </div>
        <input type="hidden" name="old_image" value="<%= users.image %>">
    
        <div class="col-6 d-grid">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    
    
    </form>
</div>


<%- include('layouts/footer') %>